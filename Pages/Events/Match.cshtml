            </form>
            </h3>
        </div>
        <div class="col outline text-center">
            <h3>
                <form method="post">
                    <input type="hidden" asp-for="RedWins" value="false" />
                    <input type="hidden" asp-for="VictoryMethod" value="Decision" />
                    <input asp-for="RedScore" type="hidden" class="scoreRed" value="" />
                    <input asp-for="BlueScore" type="hidden" class="scoreBlue" value="" />
                    <input asp-for="StartMinutes" type="hidden" class="startMinutes" />
                    <input asp-for="StartSeconds" type="hidden" class="startSeconds" />
                    <input asp-for="EndMinutes" type="hidden" class="endMinutes" />
                    <input asp-for="EndSeconds" type="hidden" class="endSeconds" />
                    <input type="submit" disabled value="Decision" asp-page-handler="Match" asp-route-elimination="@Model.Elimination" asp-route-match="@Model.Match" asp-route-round="@Model.Round" class="decision" />
                </form>
            </h3>
        </div>
    </div>

</div>

