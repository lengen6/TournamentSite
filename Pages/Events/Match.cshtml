@page
@model TieRenTournament.Pages.Events.MatchModel
@{
}
<link rel="stylesheet" href="~/@(nameof(TieRenTournament)).styles.css" />

<h2>@Model.RedComp.Bracket's Bracket</h2>
<h3>Round:@Model.Round Match:@Model.Match </h3>

<div class="container">
    <div class="Minutes">Minutes</div>
    <div class="Seconds">Seconds</div>
    <div class="Red">@Model.RedComp.FirstName @Model.RedComp.LastName</div>
    <div class="Blue">@Model.BlueComp.FirstName @Model.BlueComp.LastName</div>
    <div class="Plus-Blue">+</div>
    <div class="Minus-Blue">-</div>
    <div class="Sub-Red">Submission</div>
    <div class="Plus-Red">+</div>
    <div class="Minus-Red">-</div>
    <div class="DQ-Red">Disqualification</div>
    <div class="Sub-Blue">Submission</div>
    <div class="DQ-Blue">Disqualification</div>
    <div class="Timer">00:00</div>
</div>

<form method="post">
    <input type="radio" asp-for="RedWins" value="true"/> Red Wins <br />
    <input type="radio" asp-for="RedWins" value="false" /> Blue Wins <br />
    <input type="submit" value="Submit Score" asp-page-handler="Match" asp-route-elimination="@Model.Elimination" asp-route-match = "@Model.Match" asp-route-round = "@Model.Round" />
</form>