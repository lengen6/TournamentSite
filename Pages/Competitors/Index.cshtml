@page
@model TieRenTournament.Pages.Competitors.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Create Your Roster</h1>

<p>
    <a asp-page="Create">Add Competitor</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Competitor[0].FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Competitor[0].LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Competitor[0].Wins)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Competitor[0].Losses)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Competitor[0].Byes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Competitor[0].Place)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Competitor[0].Bracket)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Competitor) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Wins)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Losses)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Byes)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Place)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Bracket)
                </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.CompetitorId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.CompetitorId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.CompetitorId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>


    <form method="post">
    <label asp-for="@Model.Elimination" class="control-label"></label>
    <select asp-for="@Model.Elimination" class="form-control">
        <option value="1">-- 1 --</option>
        <option value="2">-- 2 --</option>
    </select>
    <input type="submit" value="Start Event" asp-page-handler="Index" />
    </form>
